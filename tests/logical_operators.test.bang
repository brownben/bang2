//=Nullish coalescing
let a = false ?? true
let b = null ?? false
let c = true ?? false
let d = null ?? "Hello"
let e = true ?? "Hello"
let f = 0 ?? "Hello"

//assert: a == false
//assert: b == false
//assert: c == true
//assert: d == "Hello"
//assert: e == true
//assert: f == 0

//=And Short-circuit
let a = "before"
let b = "before"
(a = true) and (b = false) and
  (a = "bad")

//assert: a == true
//assert: b == false


//=Or Short-circuit
let a = "before"
let b = "before"
(a = false) or (b = true) or (a = "bad")

//assert: a == false
//assert: b == true
